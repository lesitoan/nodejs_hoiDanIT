<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update user</title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <div class="update-user-container">
        <form action="/update-user" method="post">
            <div class="items">
                <lable>FirstName:</lable>
                <input name="firstName" value="<%= dataUser.firstName %>">
            </div>
            <div class="items">
                <lable>lastName:</lable>
                <input name="lastName" value="<%= dataUser.lastName %>">
            </div>
            <div class="items">
                <lable>email:</lable>
                <input name="email" value="<%= dataUser.email %>">
            </div>
            <div class="items">
                <lable>address:</lable>
                <input name="address" value="<%= dataUser.address %>">
            </div>
            <input type="text" value="<%= dataUser.id %>" hidden name="id">
            <div>
                <button class="btn" type="submit">save</button>
            </div>
        </form>
    </div>

</body>

</html>